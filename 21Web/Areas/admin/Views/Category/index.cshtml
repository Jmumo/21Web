@model List<Category>



<div class="container">
    
    <div class="row">
        <div class="col-6 pb-3">
            <h2 class="text-primary">Category List</h2>
        </div>
        
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>@obj.Description</td>
                <td> <div class="btn-group w-75 " role="group" >
                    <a asp-controller="Category" asp-action="Edit" asp-route-id = "@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square">Edit</i>
                    </a>
                    <form method="post" asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@obj.Id" class="d-inline">
                        <button type="submit" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3">Delete</i>
                        </button>
                    </form>
                </div></td>
            </tr>
        }
        
        </tbody>

    </table>


</div>
